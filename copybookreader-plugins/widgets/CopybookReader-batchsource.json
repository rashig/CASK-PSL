{
  "metadata": {
    "spec-version": "1.0"
  },
  "configuration-groups": [
    {
      "label": "CopybookReader Configuration",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        },
        {
          "widget-type": "textarea",
          "label": "COBOL Copybook",
          "name": "copybookContents"
        },
        {
          "widget-type": "textbox",
          "label": "Binary File Path",
          "name": "binaryFilePath"
        },
        {
          "widget-type": "csv",
          "label": "Fields to drop",
          "name": "drop",
          "description": "List of fields to drop.",
          "widget-attributes": {
            "delimiter": ","
          }
        },
        {
          "widget-type": "textbox",
          "label": "Maximum Split Size",
          "name": "maxSplitSize"
        }
      ]
    }
  ],
  "outputs": [
    {
      "widget-type": "non-editable-schema-editor",
      "schema": {
        "name": "etlSchemaBody",
        "type": "record",
        "fields": [
          {
            "name": "offset",
            "type": "long"
          },
          {
            "name": "body",
            "type": "string"
          }
        ]
      }
    }
  ]
}
