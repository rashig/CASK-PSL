{
  "metadata": {
    "spec-version": "1.0"
  },
  "configuration-groups": [
    {
      "label": "Kafka Producer and Topic Config",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        },
        {
          "widget-type": "csv",
          "label": "Kafka Brokers",
          "name": "brokers",
          "widget-attributes": {
            "delimiter": ","
          }
        },
        {
          "widget-type": "csv",
          "label": "Kafka Topics",
          "name": "topics",
          "widget-attributes": {
            "delimiter": ","
          }
        },
        {
          "widget-type": "select",
          "label": "Is Async ?",
          "name": "async",
          "widget-attributes": {
            "values": [
              "TRUE",
              "FALSE"
            ],
            "default": "FALSE"
          }
        }
      ]
    },
    {
      "label": "Message Configuration",
      "properties": [
        {
          "widget-type": "select",
          "label": "Message Format",
          "name": "format",
          "widget-attributes": {
            "values": [
              "CSV",
              "EXCEL",
              "JSON",
              "MYSQL",
              "RFC4180",
              "TDF"
            ],
            "default": "CSV"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Partition Field (Partition Based)",
          "name": "partitionfield"
        },
        {
          "widget-type": "textbox",
          "label": "Message Key field",
          "name": "key"
        }
      ]
    }
  ],
  "outputs": []
}
